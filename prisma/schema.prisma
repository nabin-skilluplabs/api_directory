generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id         String @id @default(uuid())
  email String  @unique
  password String 
  phone String
   code      String   @default("45") 
  expiryAt  DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  rooms      Room[]
  jobs       Job[]
}
model emailConfirmation{
   id         String @id @default(uuid())
  email      String @unique
  code       String
  type       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Room{
   id            String @id @default(uuid())
   title         String
   description   String
   users    User @relation(fields: [user_id], references: [id])
   user_id       String

}

model Job{
   id            String @id @default(uuid())
   title         String
   description   String
   users    User @relation(fields: [user_id], references: [id])
   user_id       String

}